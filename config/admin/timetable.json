            "form": false,
            "attributes": [{"id": "venue", "value": ["title"], "language":  "ru"}],
            "table": true,
            "table_filter_select": true,
            "tablesort": true,
            "tablesearch": true,
            "likesearch": true,
            "validation": "required",
            "classes": "select2-candidate",
            "wrapclasses": "col-md-12",
            "tab": "general"
        },
        "venue_scheme_id": {
            "type": "select",
            "select_data": {
                "type": "model",
                "model": "App\\Models\\Specific\\VenueScheme",
                "title": "title",
                "language": "ru"
            },
            "name": "Рассадка",
            "form": false,
            "attributes": [{"id": "scheme", "value": ["title"], "language":  "ru"}],
            "table": true,
            "table_filter_select": true,
            "tablesort": true,
            "tablesearch": true,
            "likesearch": true,
            "validation": "required",
            "wrapclasses": "col-md-12",
            "tab": "general"
        },
        "type": {
            "type": "select",
            "select_data": {
                "type": "list",
                "data": [
                    {
                        "value": "sections",
                        "title": "По секциям"
                    },
                    {
                        "value": "pricegroups",
                        "title": "По ценовым группам"
                    }
                ]
