        "event_id": {
            "type": "select",
            "select_data": {
                "type": "model",
                "model": "App\\Models\\Specific\\Event",
                "title": "title",
                "language": "ru"
            },
            "name": "Событие",
            "form": true,
            "attributes": [{"id": "event", "value": ["title"], "language":  "ru"}],
            "table": true,
            "table_filter_select": false,
            "tablesort": true,
            "tablesearch": true,
            "likesearch": true,
            "validation": "required",
            "classes": "select2-candidate",
            "wrapclasses": "col-md-12",
            "tab": "general"
        },
        "venue_id": {
            "type": "select",
            "select_data": {
                "type": "model",
                "model": "App\\Models\\Specific\\Venue",
